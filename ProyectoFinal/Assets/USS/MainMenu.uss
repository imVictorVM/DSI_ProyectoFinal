.title {
    font-size: 72px;
    color: #ffffff;
    margin-bottom: 50px;
    text-shadow: 0 0 10px #ff00ff;
}

.menu-button {
    width: 300px;
    height: 80px;
    background-color: transparent;
    color: white;
    border: 2px solid white;
    font-size: 32px;
}


.menu-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: #ff00ff;
    border-color: #ff00ff;
}

.menu-button:focus {
    outline: none;
}