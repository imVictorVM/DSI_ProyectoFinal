/* Elimina transiciones problemáticas y simplifica */
.menu-button {
    width: 300px;
    height: 80px;
    background-color: transparent;
    color: white;
    border: 2px solid white;
    font-size: 32px;
}

/* Efecto hover - versión simplificada */
.menu-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: #ff00ff;
    border-color: #ff00ff;
}

/* Elimina :focus si no es esencial */
.menu-button:focus {
    outline: none;
}